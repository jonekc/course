<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Nauka</a>
    <AuthorizeView>
        <div class="ml-auto text-white">@context.User.Identity.Name</div>
    </AuthorizeView>
    <button class="navbar-toggler ml-2" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <AuthorizeView>
                <NotAuthorized>
                    <HomeLink href="login" />
                </NotAuthorized>
                <Authorized>
                    <HomeLink href="" />
                </Authorized>
            </AuthorizeView>
        </li>
        <AuthorizeView Roles="Admin">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="panel">
                    <span class="oi oi-people" aria-hidden="true"></span> Panel
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-person" aria-hidden="true"></span> Wyloguj się
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
